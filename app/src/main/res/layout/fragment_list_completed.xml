<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListCompletedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_160sdp"
                android:src="@drawable/outline_check_circle_black_48"
                app:tint="@color/orange"
                android:layout_marginBottom="@dimen/_8sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping Complete!"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/arimo" />

            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="Please proceed to your preferred cashier lane for checkout"
                android:textSize="@dimen/_12ssp"
                android:gravity="center"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/arimo"
                android:layout_marginBottom="@dimen/_48sdp"/>

            <RelativeLayout
                android:layout_width="@dimen/_184sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Total:"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/arimo"/>

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/dummy_price"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:fontFamily="@font/arimo"/>

            </RelativeLayout>

            <Button
                android:id="@+id/button_returnToHome"
                android:layout_width="@dimen/_184sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:backgroundTint="@color/orange"
                android:text="Return to Home"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/arimo"
                android:textAllCaps="false"
                android:padding="0dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>